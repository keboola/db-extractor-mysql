{
    "name": "keboola/db-extractor-mysql",
    "license": "MIT",
    "type": "Application",
    "description": "Reads data from Mysql databases for keboola connection",
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "require": {
        "keboola/db-extractor-common": "dev-david-v10",
        "keboola/php-temp": "^1.0",
        "keboola/php-utils": "^2.3.1",
        "symfony/serializer": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "7.3",
        "keboola/coding-standard": "^6.0",
        "phpstan/phpstan": "^0.10"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\MysqlExtractor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\MysqlExtractor\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "./wait-for-it.sh mysql:$MYSQL_DB_PORT -t 30 -- ./vendor/bin/phpunit",
        "phpstan": "phpstan analyse --no-progress --level=max ./src ./tests",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "build": [
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
